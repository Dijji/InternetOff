<Window x:Class="InternetOff.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Internet" Height="150" Width="250">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>
    <Grid Background="{Binding StopGoColour}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Turn On" Name="cbOn" Width="100" VerticalAlignment="Bottom"
                Click="cbOn_Click" IsEnabled="{Binding CanTurnOn}"/>
        <TextBox Grid.Row="1" Text="Working..." Background="Transparent" FontWeight="Bold" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Visibility="{Binding Path=IsWorking, Converter={StaticResource BoolToVis}}"/>
        <Button Grid.Row="2" Content="Turn Off" Name="cbOff" Width="100" VerticalAlignment="Top"
                Click="cbOff_Click" IsEnabled="{Binding CanTurnOff}"/>
    </Grid>
</Window>
